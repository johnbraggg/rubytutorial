<p id="notice"><%= notice %></p>

<h1>Listing Careers</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Income</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= career.name %></td>
        <td><%= career.income %></td>
        <td><%= career.website %></td>
        <td><%= link_to 'Show', career, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_career_path(career), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', career, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
   
	 
  </tbody>
</table>

<br>

<%= link_to 'New Career', new_career_path, class: "btn btn-link"  %>
